<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container top">
        <noscript>
            <p> You have disabled javascript, some functionality will be unavailable!</p>
            <style>
                #noscipt-hide {
                    display: none;
                }
            </style>
        </noscript>
        <div class="col-md-1">
            @Html.ActionLink("Index", "Index", "Home")
        </div>
        <div class="col-md-2">
            @using (Html.BeginForm("Search", "Home"))
            {
                <p>Search</p>
                @Html.TextBox("input")
            }
        </div>
        <div class="col-md-9">
            @if (HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString() != "Account")
            {
                @Html.Partial("_Login", new MvcPL.ViewModels.UserLoginModel())
            }
        </div>
    </div>
    <div class="container">
        <div class="col-md-8">
            @RenderBody()
        </div>
        <div class="col-md-4">
            @Html.Action("Users", "Home", null)
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
